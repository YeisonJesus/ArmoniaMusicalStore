<div class="col">
  <div class="card shadow-sm">
    <div style="height: 250px;" class="banner w-100 d-flex justify-content-center align-items-center bg-body-tertiary">
      <%= product.category_name %>
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= product.name %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex">
          <form action="./toggle-cart" method="post">
            <input type="hidden" name="product_id" value="<%= product.id %>">
            <input type="hidden" name="product_name" value="<%= product.name %>">
            <input type="hidden" name="product_price" value="<%= product.price %>">
            <% if (typeof cartIds !== 'undefined' && Array.isArray(cartIds) && cartIds.includes(product.id)) { %>
            <button type="submit" class="btn btn-md btn-primary">
              <i class="bi bi-cart-plus-fill"></i>
            </button>
            <% } else { %>
            <button type="submit" class="btn btn-md btn-secondary">
              <i class="bi bi-cart-plus"></i>
            </button>
            <% } %>
          </form>

          <form action="./toggle-favorites" method="post">
            <input type="hidden" name="product_id" value="<%= product.id %>">
            <input type="hidden" name="product_name" value="<%= product.name %>">
            <input type="hidden" name="product_category_name" value="<%= product.category_name %>">
            <input type="hidden" name="product_price" value="<%= product.price %>">
            <% if (typeof favoritesIds !== 'undefined' && Array.isArray(favoritesIds) && favoritesIds.includes(product.id)) { %>
            <button type="submit" class="btn btn-md btn-primary ms-1">
              <i class="bi bi-bookmark-heart-fill"></i>
            </button>
            <% } else { %>
            <button type="submit" class="btn btn-md btn-secondary ms-1">
              <i class="bi bi-bookmark-heart"></i>
            </button>
            <% } %>
          </form>
        </div>
        <span class="text-body-secondary">
          <%= product.price %>$
        </span>
      </div>
    </div>
  </div>
</div>